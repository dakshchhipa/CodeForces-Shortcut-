{
  "manifest_version": 2,
  "name": "CF Shortcut",
  "version": "1.0",

  "description": "This extension shows codeforces current ratings and the upcoming contests",
  "icons" : {
  	"64" : "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background" : {
  	"scripts" : ["jquery-1.10.2.js"]
  },

  "content_scripts" : [
  	{
  		"matches" : ["http://*/*","https://*/*"],
  		"js" : ["myScript.js"]
  	}
  ],

  "permissions": [
  	"storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://codeforces.com/*"
  ]
}
